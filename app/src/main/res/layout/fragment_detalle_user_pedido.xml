<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_user_background"
    tools:context=".Admin.DetalleUserPedido">

    <TextView
        android:id="@+id/txtDetallePedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:text="DETALLE DEL PEDIDO"
        android:textColor="@color/name_categories"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="start|top" />
    <TextView
        android:id="@+id/txtProductos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:text="PRODUCTOS"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="start|top" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDetalleUserProductos"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="20dp"
        tools:listitem="@layout/fila_detalle_user_pedido" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MONTO TOTAL"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="150dp"
        android:layout_marginStart="60dp"
        android:layout_gravity="start|bottom"/>
    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S/"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="120dp"
        android:layout_marginStart="60dp"
        android:layout_gravity="start|bottom"/>
    <TextView
        android:id="@+id/txtMontoTotalPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28.50"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="120dp"
        android:layout_marginStart="85dp"
        android:layout_gravity="start|bottom"/>
    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PEN"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="120dp"
        android:layout_marginStart="140dp"
        android:layout_gravity="start|bottom"/>

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="105dp"
        android:layout_marginEnd="80dp"
        android:src="@drawable/monedero" />

</FrameLayout>